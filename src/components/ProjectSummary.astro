---
import type { CollectionEntry } from 'astro:content';

type Props = CollectionEntry<'projects'>['data'];

const { title, github, liveDemo, summary, tags } = Astro.props;
---

<div
  class="mb-10 flex w-full flex-col items-center justify-between gap-5 md:flex-row"
>
  <h1 class="!m-0">{title}</h1>

  <div
    class="flex w-full flex-col items-center gap-3 text-sm md:w-fit md:flex-row"
  >
    <a
      href={github}
      target="_blank"
      rel="noopener noreferrer"
      class="nowrap bg-secondary text-secondary-foreground flex w-full items-center justify-center gap-1 rounded-full px-6 py-1 no-underline transition-all md:w-fit"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-github-icon lucide-github"
      >
        <path
          d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
        >
        </path>
        <path d="M9 18c-4.51 2-5-2-7-2"></path>
      </svg>
      GitHub
    </a>

    <a
      href={liveDemo}
      target="_blank"
      rel="noopener noreferrer"
      class="nowrap bg-secondary text-secondary-foreground flex w-full items-center justify-center gap-1 rounded-full px-6 py-1 no-underline transition-all md:w-fit"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-link-icon lucide-link"
      >
        <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71">
        </path>
        <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71">
        </path>
      </svg>
      Live Demo
    </a>
  </div>
</div>

<p class="text-foreground/60">{summary}</p>

<h2>üõ†Ô∏è Tech Stack</h2>

<div class="mt-5 mb-4 flex flex-wrap gap-2">
  {
    tags.map((tag: any) => (
      <span class="bg-accent text-accent-foreground rounded px-2 py-1 text-sm">
        {tag}
      </span>
    ))
  }
</div>
