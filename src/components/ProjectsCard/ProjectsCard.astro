---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import ProjectsCardLink from './ProjectsCardLink.astro';

type Props = {
  heroImage: ImageMetadata;
  title: string;
  description: string;
  tags: string[];
  github: string;
  liveDemo: string;
  projectPath: string;
};

const { heroImage, title, description, tags, github, liveDemo, projectPath } =
  Astro.props;
---

<div class="flex w-full items-start gap-8">
  <div
    class="border-border flex w-full max-w-[640px] flex-col gap-5 rounded-lg border p-5"
  >
    <Image
      src={heroImage}
      alt={title}
      class="rounded-md object-cover"
      width={600}
      height={300}
    />

    <div class="flex flex-col">
      <p class="text-xl font-semibold tracking-widest">{title}</p>
      <p class="text-foreground/60 mt-3">{description}</p>
      <div class="mt-5 mb-4 flex flex-wrap gap-2">
        {
          tags?.map((tag: any) => (
            <span class="bg-accent text-accent-foreground rounded px-2 py-1 text-xs">
              {tag}
            </span>
          ))
        }
      </div>
      <div
        class="mt-4 flex w-full items-center justify-between gap-2 max-md:flex-col"
      >
        <ProjectsCardLink link={github}>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-github-icon lucide-github"
          >
            <path
              d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
            >
            </path><path d="M9 18c-4.51 2-5-2-7-2"></path>
          </svg>
          GitHub
        </ProjectsCardLink>

        <ProjectsCardLink link={liveDemo}>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-link-icon lucide-link"
          >
            <path
              d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"
            >
            </path><path
              d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"
            >
            </path>
          </svg>
          Live Demo
        </ProjectsCardLink>

        <ProjectsCardLink link={projectPath} newTab={false}>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-arrow-right-icon lucide-arrow-right"
          >
            <path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path>
          </svg>
          Learn More
        </ProjectsCardLink>
      </div>
    </div>
  </div>
</div>
