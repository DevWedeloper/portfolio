---
type Props = {
  link: string;
};

const { link } = Astro.props;
---

<a
  href={link}
  target="_blank"
  class="bg-secondary text-secondary-foreground hover:bg-secondary/80 flex w-full items-center justify-center gap-2 rounded-full px-4 py-2 text-xs font-bold uppercase transition-all max-md:w-full"
>
  <slot />
</a>
