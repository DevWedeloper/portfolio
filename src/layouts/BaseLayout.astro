---
import BaseHead from '../components/BaseHead.astro'
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'

type Props = {
  title?: string
  description?: string
}

const { title, description } = Astro.props
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="mx-auto h-full w-full max-w-[47.5rem] p-6 font-sans leading-relaxed tracking-wide">
    <Header />

    <main class="container mx-auto space-y-24 px-4 py-12">
      <slot />
    </main>

    <Footer />
  </body>
</html>
